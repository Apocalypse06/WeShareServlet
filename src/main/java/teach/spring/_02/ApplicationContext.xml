<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns:p="http://www.springframework.org/schema/p"
	xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">


	<bean id="controller1" class="teach.spring._02.ToyCar" scope="singleton"
		lazy-init="default">
		<property name="hour" value="5"></property>
		<property name="speed" value="30"></property>
	</bean>

	<bean id="controller2" class="teach.spring._02.ToyCar" scope="singleton"
		lazy-init="default">
		<constructor-arg index="0" value="3"></constructor-arg>
		<constructor-arg index="1" value="20"></constructor-arg>
	</bean>
	
	<bean id="controller3" class="teach.spring._02.ToyCar" scope="singleton"
		lazy-init="default" p:hour='1.5' p:speed='3'>
	</bean>
</beans>
