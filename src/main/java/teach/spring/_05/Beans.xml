<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd ">

	<!-- 本組態檔使用<bean>就可進行CREATE TABLE與DROP TABLE -->
	<!-- Connection conn = DriverManager.getConnection(url, user, password); 
		Statement stmt1 = con.createStatement("DROP TABLE IF EXISTS EMP"); -->
	<bean id="con1" class='java.sql.DriverManager' factory-method='getConnection'>
		<!-- <constructor-arg index='0' -->
		<!-- value='jdbc:mysql://localhost:3306/jspdb?useUnicode=true&amp;characterEncoding=utf8&amp;verifyServerCertificate=false&amp;useSSL=true' 
			/> -->
		<!-- <constructor-arg index='1' value='root' /> -->
		<!-- <constructor-arg index='2' value='jack09' /> -->
		<constructor-arg index='0'
			value='jdbc:mysql://localhost:3306/jspdb?useUnicode=true&amp;characterEncoding=utf8&amp;verifyServerCertificate=false&amp;useSSL=true' />
		<constructor-arg index='1' value='root' />
		<constructor-arg index='2' value='jack09' />
	</bean>

	<bean id='stmt1' factory-bean='con1' factory-method='createStatement'>
	
	<!-- <bean id="stmt1" factory-bean='con1' factory-method='prepareStatement'> --><!-- 寫法2 -->
	<!-- <constructor-arg value="DROP TABLE IF EXISTS SpringMember "/> -->
	<!-- </bean> -->

	</bean>

	<bean id='stmt2' factory-bean='con1' factory-method='createStatement'>

	</bean>

	<bean id='result1' factory-bean='stmt1' factory-method='executeUpdate'>
		<constructor-arg value='DROP TABLE IF EXISTS EMP' />
	</bean>


	<bean id='result2' factory-bean='stmt2' factory-method='executeUpdate'>
		<constructor-arg
			value='CREATE TABLE IF NOT EXISTS EMP(id int auto_increment primary key, name varchar(20))' />
	</bean>
</beans>